@model Tag

<div class="card">
    <div class="card-header">
        <h5>Add Tag</h5>


    </div>
    <div class="card-block">
        <h4 class="sub-title">Basic Inputs</h4>
        <form method="post">

            <div class="form-group row">
                <label asp-for=Name class="col-sm-2 col-form-label" ></label>
                <div class="col-sm-10">
                    <input asp-for=Name class="form-control" placeholder="Tag Name">
                </div>
            </div>



            <a class="btn btn-dark" asp-controller="tag" asp-action="index">Back</a>
            <input type="submit" class="btn btn-success"/>
        </form>

    </div>
</div>