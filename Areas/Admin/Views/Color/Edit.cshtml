@model Color

<div class="card">
    <div class="card-header">
        <h5>Edit Color</h5>


    </div>
    <div class="card-block">
        <h4 class="sub-title">Basic Inputs</h4>
        <form method="post">

            <div class="form-group row">
                <label asp-for=Name class="col-sm-2 col-form-label" ></label>
                <div class="col-sm-10">
                    <input asp-for=Name class="form-control" placeholder="Color Name">
                </div>
            </div>


            <div class="form-group row">
                <label asp-for=HexCode class="col-sm-2 col-form-label">Color</label>
                <div class="col-sm-10">
                    <input asp-for=HexCode type="color" class="form-control">
                </div>
            </div>

            <a class="btn btn-dark" asp-controller="color" asp-action="index">Back</a>
            <input type="submit"  class="btn btn-success"/>
        </form>

    </div>
</div>
