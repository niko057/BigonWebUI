@model List<Color>

<div class="card">
    <div class="card-header">
        <h5>Colors</h5>
        <a class="btn btn-success" asp-action="create" asp-controller="color">+Add</a>

    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Color</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                  <partial name="_Body" model="@Model"/>

                </tbody>
            </table>
        </div>
    </div>
</div>

<style>

    span[color] {
        display: inline-block;
        width: 30px;
        height: 30px;
        border-radius: 100%;
        border: 1px solid #cdcdcd;
    }
</style>


@section custom_js{

    <script>
        function removeColor(id, name) {

            const tableBody = $("#tableBody");

            Swal.fire({
                title: "Əminsinizmi?",
                text: `Bu ${name} datanı silmək istəyirsizmi?`,
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Bəli",
                cancelButtonText: "Xeyr",

            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        method: "Post",
                        url: '@Url.Action("remove","color")',
                        data: { id },
                        success: (result) => {
                            if (!result.error) {
                                Swal.fire({
                                    title: "Silindi!",
                                    text: result.message,
                                    icon: "success"
                                });

                                tableBody.html(result)
                                return;
                            }

                            Swal.fire({
                                title: "Silinmədi!",
                                text: result.message,
                                icon: "error"
                            });
                        },
                        error: (error) => {
                            console.error(error)
                        }


                    })

                  
                }
            });

        }
    </script>
}
